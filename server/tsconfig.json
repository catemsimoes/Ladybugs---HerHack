{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ]
}